  journal = {Journal of Applied Ecology},
  author = {{Allouche Omri} and {Tsoar Asaf} and {Kadmon Ronen}},
  month = {sep},
  year = {2006},
  keywords = {sensitivity,specificity,AUC,woody plants,Mahalanobis distance,predictive maps,ROC curves},
  pages = {1223--1232},
  file = {D:\\Zotero\\storage\\VILJXKEK\\Allouche Omri et al. - 2006 - Assessing the accuracy of species distribution mod.pdf;D:\\Zotero\\storage\\FNTVA9DS\\j.1365-2664.2006.01214.html},
}

