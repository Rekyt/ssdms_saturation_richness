  author = {Robert J. Hijmans and Susan E. Cameron and Juan L. Parra and Peter G. Jones and Andy Jarvis},
  month = {dec},
  year = {2005},
  keywords = {temperature,climate,interpolation,uncertainty,ANUSPLIN,error,GIS,precipitation},
